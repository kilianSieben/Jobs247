<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Jobs247.Utility;assembly=Jobs247"
             x:Class="Jobs247.Views.WelcomePage"
             Title="{x:Static local:Constants.HeaderTitle}">
    
    <ContentPage.Content>
        <StackLayout Padding="20,20,20,50">
            <Label Text="Welcome to the 24/7 job portal. Find your dream job here!" 
                HorizontalTextAlignment="Start"/>
            <Button Text="Find your new Job!" Style="{StaticResource buttonStyle}" Clicked="OnFindNewJobClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>