<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jobs247.Views.JobFilterPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20,20,50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="1">
                    <Picker Title="Job-Title" Style="{StaticResource pickerFilterStyle}"/>
                    <Picker Title="Company" Style="{StaticResource pickerFilterStyle}"/>
                    <SearchBar Placeholder="Free Text Search"/>
                    <Label Text="{Binding MatchingJobString}" Margin="0,30,0,0"/>
                </StackLayout>
                
                


            </Grid>
            
            
            
            
            
            
            <Button Text="Show the matches!" Style="{StaticResource buttonStyle}" Clicked="OnShowMatches"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>